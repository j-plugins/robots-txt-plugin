<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.robots_txt</id>
    <name>RobotsTXT</name>
    <vendor>xepozz</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="RobotsTxt File"
                implementationClass="com.github.xepozz.robots_txt.language.RobotsTxtFileType"
                fieldName="INSTANCE"
                language="RobotsTxt"
                fileNamesCaseInsensitive="robots.txt"
        />
        <lang.parserDefinition
                language="RobotsTxt"
                implementationClass="com.github.xepozz.robots_txt.language.RobotsTxtParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="RobotsTxt"
                implementationClass="com.github.xepozz.robots_txt.language.RobotsTxtSyntaxHighlighterFactory"/>
    </extensions>
</idea-plugin>
